import turtle
import pygame

usuario = "jaimedoardo"
contrase単a = "1438"
while usuario == str(input("Ingrese su usuario: ")):

    if contrase単a == str(input("Ingrese su contrase単a: ")):
        print("Bienvenido jaimedoardo")
        break 
    else:
        print("Error de contrase単a")

wn = turtle.Screen()
wn.bgcolor("black")
wn.title("Laberinto ADA")
wn.setup(700,700)
class Pen(turtle.Turtle):
    def __init__(self):
        turtle.Turtle.__init__(self)
        self.shape("square")
        self.color("white")
        self.penup()
        self.speed(0)

class Player(turtle.Turtle):
    def __init__(self):
        turtle.Turtle.__init__(self)
        self.shape("circle")
        self.color("red")
        self.penup()
        self.speed(2)

niveles =[]
nivel_1 = [
    "  XXXXXXXXXXXXXXXXXXXXXXX",
    "  P  X                  X",
    "X X XXXXX XXXXXXXXXXXXX X",
    "X X               X X X X",
    "X XXXXX X XXX X X X X X X",
    "X   X X X XX        X   X",
    "X X X XXXXXXXXXXX X XXXXX",
    "X X   XX       XX X   X X",
    "XXXXX XXXXX X X  XXXXX  X",
    "X X X X         XX   XX X",
    "X X X XXXXXXXX  XXXXXXX X",
    "X   X       X  XX  XX   X",
    "XXX X XXXXX X X  X XXXX X",
    "X X   X         X      XX",
    "X X X XXX  XX X  XXXX X X",
    "X   X X    XX X       X X",
    "XXX XXXXXXXXX XXXX  XXX X",
    "XX X XX XX XX    X  XX  X",
    "XX X XX XX XX X  X    X X",
    "XX      XX    X  X  X   ",
    "XXXXXXXXXXXXXXXXXXXXXXX  ",
]
niveles.append(nivel_1)

def iniciar_lab(nivel):
    for fila in range(len(nivel)): 
        for columna in range(len(nivel[fila])): 

            letra_x = nivel[fila][columna]
            screen_x = -288 + (columna * 23)
            screen_y = 288 - (fila * 23)

            if letra_x == "X":
                pen.goto(screen_x, screen_y) 
                pen.stamp() 
            elif letra_x == "P":
                player.goto(screen_x, screen_y) 
              
def setUp(self):
        pygame.display.init()
        #fastevent.init()
        event.clear()
        self.assert_(not event.get())
              
                
while Pen:
    #reloj.tic(60)
    
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            Pen = False
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_ESCAPE:
                Pen = False
            if event.key == pygame.K_RIGHT:
                Player += 10
            if event.key == pygame.K_LEFT:
                Player -= 10
            if event.key == pygame.K_DOWN:
                Player += 10
            if event.key == pygame.K_UP:
                Player -= 10
                

pen = Pen() 
player = Player() 
iniciar_lab(niveles[0])

wn.mainloop() 

pen = Pen() 
player = Player() 
iniciar_lab(niveles[0])

wn.mainloop() 
